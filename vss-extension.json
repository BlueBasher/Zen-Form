{
    "manifestVersion": 1,
    "id": "customize-team-form",
    "version": "0.1.8",
    "name": "Customize Team Form",
    "scopes": [ "vso.work", "vso.work_write" ],
    "description": "Create team specific form customizations.",
    "publisher": "ottostreifel",
    "icons": {
        "default": "img/logo.svg"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "Sample"
    ],
    "content": {
        "details": {
            "path": "details.md"
        }
    },
    "branding": {
        "color": "rgb(220, 235, 252)",
        "theme": "light"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "build",
            "addressable": true
        },
        {
            "path": "page.html",
            "addressable": true
        }
    ],
    "categories": [
        "Integrate"
    ],
    "contributions": [
        {
            "id": "vsts-extension-ts-seed-simple-action",
            "type": "ms.vss-web.action-provider",
            "description": "",
            "targets": [
                "ms.vss-work-web.work-item-context-menu"
            ],
            "properties": {
                "group": "contributed",
                "uri": "index.html"
            }
        },
        {  
            "id": "form-page",
            "type": "ms.vss-work-web.work-item-form-page",
            "description": "Team customizable page",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "name": "Zen Page",
                "uri": "page.html"
            } 
        }
    ]
}
